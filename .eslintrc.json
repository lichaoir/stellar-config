{
  "plugins": ["react"],
  "extends": ["eslint:recommended", "google", "plugin:react/recommended"],
  "rules": {
    "max-len": ["warn", { "code": 100 }],
    "new-cap": ["error", { "capIsNew": false }],
    "no-console": "off",
    "require-jsdoc": "off",
    "react/display-name": "off",
    "react/prop-types": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "worker": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
